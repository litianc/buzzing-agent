# Environment Variables Sample
# Copy this file to .env and fill in your values

# Tencent Cloud Translation API
# Get credentials from: https://console.cloud.tencent.com/cam/capi
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_REGION=ap-guangzhou

# Product Hunt API
# Get token from: https://www.producthunt.com/v2/oauth/applications
PRODUCTHUNT_API_KEY=your_producthunt_developer_token

# Cron Secret (optional, for securing cron endpoints)
CRON_SECRET=your_random_secret_string
